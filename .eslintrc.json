{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "warn" // Warns about missing dependencies
    // Add any other rules you want to customize
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detects the React version
    }
  }
}
